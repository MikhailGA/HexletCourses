extends ../layouts/app.pug

block content
  //- // BEGIN (write your solution here)
  if posts.length > 0
    table.table
      tr
        th Title
      for post in posts
        tr
          td
            a(href=`/posts/${post.id}`)= post.title
            ul
              li
                a(href=`/posts/${post.id}/edit`) Edit
              li
                form(action=`/posts/${post.id}?_method=DELETE` method='post')
                  button(type="submit") Delete
  else
    p Пусто
  //- // END